<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.activity.PokerGameActivity">
    <!--引入头部-->
    <com.jzy.braindevelopment.comment.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/poker_title_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--扑克组数-->
    <TextView
        android:id="@+id/poker_group_num_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="牌幅计数器"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/poker_title_bar"
        app:layout_constraintLeft_toLeftOf="@id/game_view"
        app:layout_constraintBottom_toTopOf="@id/game_view"
        app:layout_constraintRight_toRightOf="@id/game_view"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/game_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/switch_poker_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:text="回看"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/switch_poker_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:text="下一组"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>