<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.LoginActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logo"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="129dp">

        <!--引入头部-->
        <com.jzy.braindevelopment.comment.TitleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/tie_lin"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal"></LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"></android.support.constraint.ConstraintLayout>
        <!--账号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="70dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="账号"
                android:textColor="#FFFFFF"

                android:textSize="23dp" />

            <EditText
                android:id="@+id/user"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:background="@drawable/round_editstyle"
                android:hint="手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#fff" />
        </LinearLayout>

        <!--密码-->
        <LinearLayout
            android:id="@+id/pwd_txt"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="42dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="23dp"
                android:text="密码"
                android:textColor="#FFFFFF"
                android:textSize="23dip" />

            <EditText
                android:id="@+id/password"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:background="@drawable/round_editstyle"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#fff" />
        </LinearLayout>

        <!--登陆按钮-->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="71dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logoboot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/botton_logoer"
                android:textSize="20dp" />
            <!--@+id/password-->
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>